package com.topcoder.umltool.deploy;

import java.awt.Color;

/**
 * <p>
 * This button is used to add attributes to a ClassNode.
 * </p>
 * @author ly
 * @version 1.0
 */
public class AttributeAddButton extends FeatureAddButton {
    /**
     * <p>
     * Creates an instance of AttributeAddButton.
     * </p>
     * @param mainFrame
     *            main frame window
     */
    public AttributeAddButton(MainFrame mainFrame) {
        super(new AttributeAddAction(mainFrame));
        setFillColor(Color.RED);
    }
}
