package com.topcoder.gui.panels.style;

import com.topcoder.util.errorhandling.BaseRuntimeException;

/**
 * <p>
 * Base exception used in this component. This class extends BaseRuntimeException from TopCoder's
 * Base Exception component.
 * </p>
 *
 * <p>
 * Thread safety: This class is immutable and so is thread safe.
 * </p>
 *
 * @author enefem21, TCSDEVELOPER
 * @version 1.0
 */
public class StylePanelException extends BaseRuntimeException {
    /**
     * <p>
     * Constructs a new StylePanelException with the given message.
     * </p>
     *
     * <p>
     * The message needs to be meaningful, so that the user will benefit from meaningful messages.
     * </p>
     *
     *
     * @param message the message describing the exception
     */
    public StylePanelException(String message) {
        super(message);
    }

    /**
     * <p>
     * Constructs a new StylePanelException with the given message and cause.
     * </p>
     *
     * <p>
     * The message needs to be meaningful, so that the user will benefit from meaningful messages.
     * </p>
     *
     * <p>
     * The cause is the inner exception.
     * </p>
     *
     * @param message the message describing the exception
     * @param cause the cause of the exception
     */
    public StylePanelException(String message, Throwable cause) {
        super(message, cause);
    }
}
