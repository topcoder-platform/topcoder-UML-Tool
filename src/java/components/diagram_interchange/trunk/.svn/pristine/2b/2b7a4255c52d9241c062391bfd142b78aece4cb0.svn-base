package com.topcoder.diagraminterchange.failuretests;

import junit.framework.Test;
import junit.framework.TestCase;
import junit.framework.TestSuite;

/**
 * <p>This test case aggregates all Failure test cases.</p>
 *
 * @author iamajia
 * @version 1.0
 */
public class FailureTests extends TestCase {
    /**
     * Aggregates unit test cases.
     *
     * @return the aggregated unit test cases.
     */
    public static Test suite() {
        final TestSuite suite = new TestSuite();
        suite.addTest(BezierPointFailureTest.suite());
        suite.addTest(DiagramElementFailureTest.suite());
        suite.addTest(DiagramFailureTest.suite());
        suite.addTest(GraphConnectorFailureTest.suite());
        suite.addTest(GraphEdgeFailureTest.suite());
        suite.addTest(GraphElementFailureTest.suite());
        suite.addTest(PolylineFailureTest.suite());
        return suite;
    }

}
